@using IdleOptimizer.Models
@using IdleOptimizer.Services
@using IdleOptimizer.Components
@using MudBlazor
@inherits FormDialogBase

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Add New Resource</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="Form" @bind-IsValid="@Success" @bind-Errors="@Errors">
            <MudTextField @bind-Value="@newResource.Name" Label="Resource Name" Variant="Variant.Outlined" Required="true" />
            
            <MudText Typo="Typo.body2" Class="mt-2" Style="color: #90caf9;">
                Total Production will be automatically calculated from generators that produce this resource.
            </MudText>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="SaveAsync" Disabled="!Success">
            Save
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public ICalculationService CalculationService { get; set; } = default!;

    private Resource newResource = new();

    protected override async Task OnSaveAsync()
    {
        if (string.IsNullOrWhiteSpace(newResource.Name))
        {
            return;
        }

        // Check if resource already exists
        var existingResource = CalculationService.GetResource(newResource.Name);
        if (existingResource != null)
        {
            MudDialog.Cancel();
            return;
        }

        CalculationService.AddResource(newResource);
        MudDialog.Close(DialogResult.Ok(true));

        await CalculationService.SaveStateAsync();
    }
}