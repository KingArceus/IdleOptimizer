@using IdleOptimizer.Models
@using IdleOptimizer.ViewModels
@using IdleOptimizer.Services
@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Add New Generator</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
            <MudTextField ShrinkLabel @bind-Value="@viewModel.Name" Label="Name" Variant="Variant.Outlined" Required="true" />
            
            <ResourceEntryEditor Entries="@viewModel.Resources" 
                                 EntriesChanged="@((List<ResourceEntryViewModel> entries) => { viewModel.Resources = entries; })"
                                 CalculationService="@CalculationService" 
                                 ItemIdPrefix="generator-resource" />
            
            <MudNumericField ShrinkLabel @bind-Value="@viewModel.Count" Label="Initial Count" 
                            Variant="Variant.Outlined" Required="true" Min="0" Class="mt-2" />
            
            <MudStack Spacing="2" Class="mt-2" Row="true">
                <MudSelect ShrinkLabel T="string" SelectedValues="RequiredGeneratorsEnumerable" 
                          SelectedValuesChanged="@OnRequiredGeneratorsChanged"
                          Label="Required Generators" Variant="Variant.Outlined" MultiSelection="true" >
                    @foreach (var generator in CalculationService.Generators)
                    {
                        <MudSelectItem Value="@generator.Name">@generator.Name</MudSelectItem>
                    }
                </MudSelect>
                <MudSelect ShrinkLabel T="string" SelectedValues="RequiredResearchEnumerable" 
                          SelectedValuesChanged="@OnRequiredResearchChanged"
                          Label="Required Research" Variant="Variant.Outlined" MultiSelection="true" >
                    @foreach (var research in CalculationService.Research)
                    {
                        <MudSelectItem Value="@research.Name">@research.Name</MudSelectItem>
                    }
                </MudSelect>
            </MudStack>
            
            <ResourceCostEntryEditor Entries="@viewModel.ResourceCosts" 
                                    EntriesChanged="@((List<ResourceCostEntryViewModel> entries) => { viewModel.ResourceCosts = entries; })"
                                    CalculationService="@CalculationService" 
                                    ItemIdPrefix="generator-cost" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!success">
            Save
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public ICalculationService CalculationService { get; set; } = default!;
    [Inject] private INumberFormattingService NumberFormattingService { get; set; } = default!;

    private GeneratorEditViewModel viewModel = new();
    private MudForm? form;
    private bool success;
    private string[] errors = { };

    private HashSet<string> requiredGenerators = new();
    private IEnumerable<string> RequiredGeneratorsEnumerable => requiredGenerators;
    private HashSet<string> requiredResearch = new();
    private IEnumerable<string> RequiredResearchEnumerable => requiredResearch;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        var firstResourceName = CalculationService.Resources.FirstOrDefault()?.Name;
        viewModel.Resources.Add(new ResourceEntryViewModel { ResourceName = firstResourceName, Value = 0 });
        viewModel.ResourceCosts.Add(new ResourceCostEntryViewModel { ResourceName = firstResourceName, Value = 0 });
        viewModel.CostRatio = 1.15; // Default 15% increase
    }

    private void OnRequiredGeneratorsChanged(IEnumerable<string> values)
    {
        requiredGenerators = values.ToHashSet();
    }

    private void OnRequiredResearchChanged(IEnumerable<string> values)
    {
        requiredResearch = values.ToHashSet();
    }

    private async Task Save()
    {
        if (form != null)
        {
            await form.Validate();
            if (form.IsValid)
            {
                viewModel.RequiredGenerators = requiredGenerators.ToList();
                viewModel.RequiredResearch = requiredResearch.ToList();
                
                var generator = viewModel.ToGenerator(NumberFormattingService);
                CalculationService.Generators.Add(generator);
                CalculationService.UpdateResourceTotalProduction();
                MudDialog.Close(DialogResult.Ok(true));

                await CalculationService.SaveStateAsync();
            }
        }
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}