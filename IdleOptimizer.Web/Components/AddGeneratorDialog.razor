@using IdleOptimizer.Models
@using IdleOptimizer.Services
@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Add New Generator</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
            <MudTextField ShrinkLabel @bind-Value="@newGenerator.Name" Label="Name" Variant="Variant.Outlined" Required="true" />
            
            <MudStack Spacing="2" Class="mt-2">
                @for (int index = 0; index < resources.Count; index++)
                {
                    var resource = resources[index];
                    var isLast = index == resources.Count - 1;
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudSelect ShrinkLabel T="string" @bind-Value="@resource.ResourceName" Label="Resource" FullWidth=true
                                Variant="Variant.Outlined" Style="flex: 1;" Id="@($"generator-resource-{index}")">
                            @foreach (var res in CalculationService.Resources)
                            {
                                <MudSelectItem Value="@res.Name">@res.Name</MudSelectItem>
                            }
                        </MudSelect>
                        <MudNumericField ShrinkLabel @bind-Value="@resource.Value" Label="Production" 
                                    Variant="Variant.Outlined" Min="0.01" Style="flex: 1;" Id="@($"generator-production-{index}")" />
                        <AbbreviationSelect @bind-Value="@resource.Abbr" Id="@($"generator-abbr-{index}")" />
                        
                        <MudButton Size="Size.Small" Variant="Variant.Filled" 
                                   Color="@(isLast ? Color.Primary : Color.Error)"
                                   Style="height: 50px; width: 50px; margin-top: 3px;"
                                   OnClick="@(isLast ? () => AddResource() : () => RemoveResource(resource))">
                            @(isLast ? "Add" : "Remove")
                        </MudButton>
                    </MudStack>
                }
            </MudStack>
            
            <MudNumericField ShrinkLabel @bind-Value="@newGenerator.Count" Label="Initial Count" 
                            Variant="Variant.Outlined" Required="true" Min="0" Class="mt-2" />
            
            <MudStack Spacing="2" Class="mt-2" Row="true">
                <MudSelect ShrinkLabel T="string" SelectedValues="RequiredGeneratorsEnumerable" 
                          SelectedValuesChanged="@OnRequiredGeneratorsChanged"
                          Label="Required Generators" Variant="Variant.Outlined" MultiSelection="true" >
                    @foreach (var generator in CalculationService.Generators)
                    {
                        <MudSelectItem Value="@generator.Name">@generator.Name</MudSelectItem>
                    }
                </MudSelect>
                <MudSelect ShrinkLabel T="string" SelectedValues="RequiredResearchEnumerable" 
                          SelectedValuesChanged="@OnRequiredResearchChanged"
                          Label="Required Research" Variant="Variant.Outlined" MultiSelection="true" >
                    @foreach (var research in CalculationService.Research)
                    {
                        <MudSelectItem Value="@research.Name">@research.Name</MudSelectItem>
                    }
                </MudSelect>
            </MudStack>
            
            <MudStack Spacing="2" Class="mt-2">
                @for (int index = 0; index < resourceCosts.Count; index++)
                {
                    var cost = resourceCosts[index];
                    var isLast = index == resourceCosts.Count - 1;
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudSelect ShrinkLabel T="string" @bind-Value="@cost.ResourceName" Label="Resource" FullWidth=true
                                Variant="Variant.Outlined" Style="flex: 1;" Id="@($"generator-cost-resource-{index}")">
                            @foreach (var res in CalculationService.Resources)
                            {
                                <MudSelectItem Value="@res.Name">@res.Name</MudSelectItem>
                            }
                        </MudSelect>
                        <MudNumericField ShrinkLabel @bind-Value="@cost.Value" Label="Cost Amount" 
                                    Variant="Variant.Outlined" Min="0.01" Style="flex: 1;" Id="@($"generator-cost-value-{index}")" />
                        <AbbreviationSelect @bind-Value="@cost.Abbr" Id="@($"generator-cost-abbr-{index}")" />
                        
                        <MudButton Size="Size.Small" Variant="Variant.Filled" 
                                   Color="@(isLast ? Color.Primary : Color.Error)"
                                   Style="height: 50px; width: 50px; margin-top: 3px;"
                                   OnClick="@(isLast ? () => AddResourceCost() : () => RemoveResourceCost(cost))">
                            @(isLast ? "Add" : "Remove")
                        </MudButton>
                    </MudStack>
                }
            </MudStack>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!success">
            Save
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public ICalculationService CalculationService { get; set; } = default!;
    [Inject] private INumberFormattingService NumberFormattingService { get; set; } = default!;

    private Generator newGenerator = new();
    private MudForm? form;
    private bool success;
    private string[] errors = { };

    private class ResourceEntry
    {
        public string? ResourceName { get; set; }
        public double Value { get; set; } = 0;
        public string? Abbr { get; set; }
    }

    private class ResourceCostEntry
    {
        public string? ResourceName { get; set; }
        public double Value { get; set; } = 0;
        public string? Abbr { get; set; }
    }

    private List<ResourceEntry> resources = new();
    private List<ResourceCostEntry> resourceCosts = new();
    private HashSet<string> requiredGenerators = new();
    private IEnumerable<string> RequiredGeneratorsEnumerable => requiredGenerators;
    private HashSet<string> requiredResearch = new();
    private IEnumerable<string> RequiredResearchEnumerable => requiredResearch;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        var firstResourceName = CalculationService.Resources.FirstOrDefault()?.Name;
        resources.Add(new ResourceEntry { ResourceName = firstResourceName, Value = 0 });
        resourceCosts.Add(new ResourceCostEntry { ResourceName = firstResourceName, Value = 0 });
    }

    private void AddResource()
    {
        var firstResourceName = CalculationService.Resources.FirstOrDefault()?.Name;
        resources.Add(new ResourceEntry { ResourceName = firstResourceName, Value = 0 });
    }

    private void RemoveResource(ResourceEntry resource)
    {
        // Prevent removing the last item to ensure there's always at least one entry
        if (resources.Count > 1)
        {
            resources.Remove(resource);
        }
    }

    private void AddResourceCost()
    {
        var firstResourceName = CalculationService.Resources.FirstOrDefault()?.Name;
        resourceCosts.Add(new ResourceCostEntry { ResourceName = firstResourceName, Value = 0 });
    }

    private void RemoveResourceCost(ResourceCostEntry cost)
    {
        // Prevent removing the last item to ensure there's always at least one entry
        if (resourceCosts.Count > 1)
        {
            resourceCosts.Remove(cost);
        }
    }

    private void OnRequiredGeneratorsChanged(IEnumerable<string> values)
    {
        requiredGenerators = values.ToHashSet();
    }

    private void OnRequiredResearchChanged(IEnumerable<string> values)
    {
        requiredResearch = values.ToHashSet();
    }

    private async Task Save()
    {
        if (form != null)
        {
            await form.Validate();
            if (form.IsValid)
            {
                // Handle resource costs
                newGenerator.ResourceCosts = new Dictionary<string, double>();
                foreach (var cost in resourceCosts)
                {
                    if (!string.IsNullOrWhiteSpace(cost.ResourceName) && cost.Value > 0)
                    {
                        double costValue = NumberFormattingService.ApplyAbbreviation(cost.Value, cost.Abbr);
                        newGenerator.ResourceCosts[cost.ResourceName] = costValue;
                    }
                }
                newGenerator.Cost = newGenerator.ResourceCosts.Count > 0 
                    ? newGenerator.ResourceCosts.Values.Sum() 
                    : 0;
                
                // Handle resources for production
                newGenerator.Resources = new Dictionary<string, double>();
                foreach (var resource in resources)
                {
                    if (!string.IsNullOrWhiteSpace(resource.ResourceName) && resource.Value > 0)
                    {
                        double productionValue = NumberFormattingService.ApplyAbbreviation(resource.Value, resource.Abbr);
                        newGenerator.Resources[resource.ResourceName] = productionValue;
                    }
                }
                newGenerator.BaseProduction = newGenerator.Resources.Count > 0 
                    ? newGenerator.Resources.Values.Sum() 
                    : 0;
                
                // Initialize BaseResources as a copy of Resources
                newGenerator.BaseResources = newGenerator.Resources.Count > 0
                    ? new Dictionary<string, double>(newGenerator.Resources)
                    : new Dictionary<string, double>();
                
                // Initialize BaseResourceCosts as a copy of ResourceCosts
                newGenerator.BaseResourceCosts = newGenerator.ResourceCosts.Count > 0
                    ? new Dictionary<string, double>(newGenerator.ResourceCosts)
                    : new Dictionary<string, double>();
                
                // Set default CostRatio if not set
                if (newGenerator.CostRatio == 0 && newGenerator.Cost > 0)
                {
                    newGenerator.CostRatio = 1.15; // Default 15% increase
                }
                
                // Handle prerequisites
                newGenerator.RequiredGenerators = requiredGenerators.ToList();
                newGenerator.RequiredResearch = requiredResearch.ToList();
                
                CalculationService.Generators.Add(newGenerator);
                CalculationService.UpdateResourceTotalProduction();
                MudDialog.Close(DialogResult.Ok(true));

                await CalculationService.SaveStateAsync();
            }
        }
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}