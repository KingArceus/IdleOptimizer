@using IdleOptimizer.Services
@using IdleOptimizer.Components
@using MudBlazor
@inherits FormDialogBase

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Enter New Cost</MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1" Class="mb-3">
            Current cost: <strong>@NumberFormattingService.FormatNumber(CurrentCost)</strong>
        </MudText>
        <MudText Typo="Typo.body2" Class="mb-3">
            Please enter the cost after purchasing this generator:
        </MudText>
        <MudForm @ref="Form" @bind-IsValid="@Success" @bind-Errors="@Errors">
            <MudStack Row="true" Spacing="2">
                <MudNumericField @bind-Value="@newCostValue" 
                                 Label="New Cost" 
                                 Variant="Variant.Outlined" 
                                 Required="true" 
                                 Min="0.01" 
                                 Style="flex: 1;" />
                <AbbreviationSelect @bind-Value="@newCostAbbr" />
            </MudStack>
            <div class="text-caption mt-1">Formatted: @NumberFormattingService.FormatNumber(EffectiveNewCost)</div>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="SaveAsync" Disabled="!Success">
            Save
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public ICalculationService CalculationService { get; set; } = default!;
    [Parameter] public double CurrentCost { get; set; }
    [Inject] private INumberFormattingService NumberFormattingService { get; set; } = default!;
    
    private double newCostValue = 0;
    private string? newCostAbbr = null;

    private double EffectiveNewCost => NumberFormattingService.ApplyAbbreviation(newCostValue, newCostAbbr);

    protected override async Task OnSaveAsync()
    {
        var effectiveCost = EffectiveNewCost;
        MudDialog.Close(DialogResult.Ok(effectiveCost));
    }
}