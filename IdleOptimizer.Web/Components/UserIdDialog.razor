@using IdleOptimizer.Services
@using MudBlazor
@inject IDialogService DialogService

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Set User ID for Cloud Sync</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
            <MudTextField @bind-Value="@userId" 
                         Label="User ID" 
                         Variant="Variant.Outlined" 
                         Required="true"
                         HelperText="Enter your unique user ID to enable cloud sync across devices"
                         Class="mb-3" />
            <MudText Typo="Typo.caption" Class="mt-2">
                This ID will be used to sync your data across different devices. 
                Make sure to use the same ID on all your devices.
            </MudText>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="@(!success || string.IsNullOrWhiteSpace(userId))">
            Save
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public ILocalStorageService LocalStorageService { get; set; } = default!;
    [Parameter] public string? CurrentUserId { get; set; }

    private MudForm? form;
    private bool success;
    private string[] errors = { };
    private string userId = string.Empty;
    private bool isCheckingUser = false;

    protected override void OnInitialized()
    {
        if (!string.IsNullOrEmpty(CurrentUserId))
        {
            userId = CurrentUserId;
        }
    }

    private async Task<bool> CheckAndConfirmUserExists(string userIdToCheck)
    {
        if (isCheckingUser || string.IsNullOrWhiteSpace(userIdToCheck))
        {
            return false;
        }

        isCheckingUser = true;
        try
        {
            var userExists = await LocalStorageService.CheckUserExistsAsync(userIdToCheck);
            if (userExists)
            {
                // Show confirmation dialog
                var parameters = new DialogParameters
                {
                    ["UserId"] = userIdToCheck
                };
                var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };
                var confirmDialog = await DialogService.ShowAsync<OverwriteUserDialog>("User Already Exists", parameters, options);
                var result = await confirmDialog.Result;
                
                if (result.Canceled || result.Data is not bool overwrite || !overwrite)
                {
                    // User cancelled or chose not to overwrite
                    return false;
                }
                return true; // User confirmed overwrite
            }
            return true; // User doesn't exist, proceed
        }
        finally
        {
            isCheckingUser = false;
        }
    }

    private async Task Save()
    {
        if (form != null)
        {
            await form.Validate();
            if (form.IsValid && !string.IsNullOrWhiteSpace(userId))
            {
                var trimmedUserId = userId.Trim();
                
                // Check if user exists and it's different from current user ID
                // This handles both initialization (CurrentUserId is null/empty) and changing username
                if (trimmedUserId != CurrentUserId)
                {
                    var canProceed = await CheckAndConfirmUserExists(trimmedUserId);
                    if (!canProceed)
                    {
                        // User cancelled or chose not to overwrite
                        return;
                    }
                }
                
                await LocalStorageService.SetUserIdAsync(trimmedUserId);
                MudDialog.Close(DialogResult.Ok(trimmedUserId));
            }
        }
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}

