@using IdleOptimizer.Models
@using IdleOptimizer.Services
@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Add New Research</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
            <MudTextField ShrinkLabel @bind-Value="@newResearch.Name" Label="Name" Variant="Variant.Outlined" Required="true" />
            
            <MudStack Spacing="2" Class="mt-2">
                @for (int index = 0; index < targetMultipliers.Count; index++)
                {
                    var target = targetMultipliers[index];
                    var isLast = index == targetMultipliers.Count - 1;
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudSelect ShrinkLabel T="string" @bind-Value="@target.GeneratorName" Label="Generator" FullWidth=true
                                   Variant="Variant.Outlined" Style="flex: 1;" Id="@($"target-generator-{index}")">
                            <MudSelectItem Value="@("All")">All</MudSelectItem>
                            @foreach (var generator in CalculationService.Generators)
                            {
                                <MudSelectItem Value="@generator.Name">@generator.Name</MudSelectItem>
                            }
                        </MudSelect>
                        <MudNumericField ShrinkLabel @bind-Value="@target.MultiplierValue" Label="Multiplier" 
                                         Variant="Variant.Outlined" Min="0.01" Style="flex: 1;" Required="true" Id="@($"target-multiplier-{index}")" />
                        
                        <MudButton Size="Size.Small" Variant="Variant.Filled" 
                                   Color="@(isLast ? Color.Primary : Color.Error)"
                                   Style="height: 50px; width: 50px; margin-top: 3px;"
                                   OnClick="@(isLast ? () => AddTargetMultiplier() : () => RemoveTargetMultiplier(target))">
                            @(isLast ? "Add" : "Remove")
                        </MudButton>
                    </MudStack>
                }
            </MudStack>

            <MudStack Spacing="2" Class="mt-2" Row="true">
                <MudSelect ShrinkLabel T="string" SelectedValues="RequiredGeneratorsEnumerable" SelectedValuesChanged="@OnRequiredGeneratorsChanged"
                          Label="Required Generators" Variant="Variant.Outlined" MultiSelection="true" >
                    @foreach (var generator in CalculationService.Generators)
                    {
                        <MudSelectItem Value="@generator.Name">@generator.Name</MudSelectItem>
                    }
                </MudSelect>
                <MudSelect ShrinkLabel T="string" SelectedValues="RequiredResearchEnumerable" SelectedValuesChanged="@OnRequiredResearchChanged"
                          Label="Required Research" Variant="Variant.Outlined" MultiSelection="true" >
                    @foreach (var research in CalculationService.Research)
                    {
                        <MudSelectItem Value="@research.Name">@research.Name</MudSelectItem>
                    }
                </MudSelect>
            </MudStack>

            <MudStack Spacing="2" Class="mt-2">
                @for (int index = 0; index < resourceCosts.Count; index++)
                {
                    var cost = resourceCosts[index];
                    var isLast = index == resourceCosts.Count - 1;
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudSelect ShrinkLabel T="string" @bind-Value="@cost.ResourceName" Label="Resource" FullWidth=true
                                Variant="Variant.Outlined" Style="flex: 1;" Id="@($"research-cost-resource-{index}")">
                            @foreach (var res in CalculationService.Resources)
                            {
                                <MudSelectItem Value="@res.Name">@res.Name</MudSelectItem>
                            }
                        </MudSelect>
                        <MudNumericField ShrinkLabel @bind-Value="@cost.Value" Label="Cost Amount" 
                                    Variant="Variant.Outlined" Min="0.01" Style="flex: 1;" Id="@($"research-cost-value-{index}")" />
                        <MudSelect ShrinkLabel T="string" @bind-Value="@cost.Abbr" Label="Abbr" 
                                Variant="Variant.Outlined" Style="width: 100px;" Dense="true" Id="@($"research-cost-abbr-{index}")">
                            <MudSelectItem Value="@((string?)null)">None</MudSelectItem>
                            <MudSelectItem Value="@("K")">K</MudSelectItem>
                            <MudSelectItem Value="@("M")">M</MudSelectItem>
                            <MudSelectItem Value="@("B")">B</MudSelectItem>
                            <MudSelectItem Value="@("T")">T</MudSelectItem>
                            <MudSelectItem Value="@("Qa")">Qa</MudSelectItem>
                            <MudSelectItem Value="@("Qi")">Qi</MudSelectItem>
                            <MudSelectItem Value="@("Sx")">Sx</MudSelectItem>
                            <MudSelectItem Value="@("Sp")">Sp</MudSelectItem>
                            <MudSelectItem Value="@("Oc")">Oc</MudSelectItem>
                            <MudSelectItem Value="@("No")">No</MudSelectItem>
                            <MudSelectItem Value="@("Dc")">Dc</MudSelectItem>
                            <MudSelectItem Value="@("Udc")">Udc</MudSelectItem>
                            <MudSelectItem Value="@("Ddc")">Ddc</MudSelectItem>
                        </MudSelect>
                        
                        <MudButton Size="Size.Small" Variant="Variant.Filled" 
                                   Color="@(isLast ? Color.Primary : Color.Error)"
                                   Style="height: 50px; width: 50px; margin-top: 3px;"
                                   OnClick="@(isLast ? () => AddResourceCost() : () => RemoveResourceCost(cost))">
                            @(isLast ? "Add" : "Remove")
                        </MudButton>
                    </MudStack>
                }
            </MudStack>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!success">
            Save
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public ICalculationService CalculationService { get; set; } = default!;

    private Research newResearch = new();
    private HashSet<string> requiredGenerators = new();
    private IEnumerable<string> RequiredGeneratorsEnumerable => requiredGenerators;
    private HashSet<string> requiredResearch = new();
    private IEnumerable<string> RequiredResearchEnumerable => requiredResearch;
    private MudForm? form;
    private bool success;
    private string[] errors = { };

    private class ResourceCostEntry
    {
        public string? ResourceName { get; set; }
        public double Value { get; set; } = 0;
        public string? Abbr { get; set; }
    }

    private class TargetMultiplierEntry
    {
        public string? GeneratorName { get; set; }
        public double MultiplierValue { get; set; } = 1.0;
    }

    private List<ResourceCostEntry> resourceCosts = new();
    private List<TargetMultiplierEntry> targetMultipliers = new();

    protected override void OnInitialized()
    {
        base.OnInitialized();
        var firstResourceName = CalculationService.Resources.FirstOrDefault()?.Name;
        resourceCosts.Add(new ResourceCostEntry { ResourceName = firstResourceName, Value = 0 });
        
        // Initialize with one target multiplier entry - default to "All" if generators exist
        var defaultGenerator = CalculationService.Generators.Any() ? "All" : null;
        targetMultipliers.Add(new TargetMultiplierEntry { GeneratorName = defaultGenerator, MultiplierValue = 1.0 });
    }

    private void AddResourceCost()
    {
        var firstResourceName = CalculationService.Resources.FirstOrDefault()?.Name;
        resourceCosts.Add(new ResourceCostEntry { ResourceName = firstResourceName, Value = 0 });
    }

    private void RemoveResourceCost(ResourceCostEntry cost)
    {
        // Prevent removing the last item to ensure there's always at least one entry
        if (resourceCosts.Count > 1)
        {
            resourceCosts.Remove(cost);
        }
    }

    private void AddTargetMultiplier()
    {
        // Default to "All" if generators exist, otherwise null
        var defaultGenerator = CalculationService.Generators.Any() ? "All" : null;
        targetMultipliers.Add(new TargetMultiplierEntry { GeneratorName = defaultGenerator, MultiplierValue = 1.0 });
        StateHasChanged();
    }

    private void RemoveTargetMultiplier(TargetMultiplierEntry target)
    {
        // Prevent removing the last item to ensure there's always at least one entry
        if (targetMultipliers.Count > 1)
        {
            targetMultipliers.Remove(target);
            StateHasChanged();
        }
    }

    private void OnRequiredGeneratorsChanged(IEnumerable<string> values)
    {
        requiredGenerators = values.ToHashSet();
    }

    private void OnRequiredResearchChanged(IEnumerable<string> values)
    {
        requiredResearch = values.ToHashSet();
    }

    private async Task Save()
    {
        if (form != null)
        {
            await form.Validate();
            if (form.IsValid)
            {
                // Handle resource costs
                newResearch.ResourceCosts = new Dictionary<string, double>();
                foreach (var cost in resourceCosts)
                {
                    if (!string.IsNullOrWhiteSpace(cost.ResourceName) && cost.Value > 0)
                    {
                        double costValue = CalculationService.ApplyAbbreviation(cost.Value, cost.Abbr);
                        newResearch.ResourceCosts[cost.ResourceName] = costValue;
                    }
                }
                newResearch.Cost = newResearch.ResourceCosts.Count > 0 
                    ? newResearch.ResourceCosts.Values.Sum() 
                    : 0;
                
                // Handle target generators and multipliers
                newResearch.TargetGenerators = new List<string>();
                newResearch.TargetMultipliers = new Dictionary<string, double>();
                
                foreach (var target in targetMultipliers)
                {
                    if (string.IsNullOrWhiteSpace(target.GeneratorName) || target.MultiplierValue <= 0)
                        continue;
                    
                    if (target.GeneratorName == "All")
                    {
                        // If "All" is selected, include all generators with the same multiplier
                        foreach (var generator in CalculationService.Generators)
                        {
                            if (!newResearch.TargetGenerators.Contains(generator.Name))
                            {
                                newResearch.TargetGenerators.Add(generator.Name);
                            }
                            newResearch.TargetMultipliers[generator.Name] = target.MultiplierValue;
                        }
                    }
                    else
                    {
                        // Add specific generator
                        if (!newResearch.TargetGenerators.Contains(target.GeneratorName))
                        {
                            newResearch.TargetGenerators.Add(target.GeneratorName);
                        }
                        newResearch.TargetMultipliers[target.GeneratorName] = target.MultiplierValue;
                    }
                }

                // Handle prerequisites
                newResearch.RequiredGenerators = requiredGenerators.ToList();
                newResearch.RequiredResearch = requiredResearch.ToList();

                CalculationService.Research.Add(newResearch);
                await CalculationService.SaveStateAsync();
                MudDialog.Close(DialogResult.Ok(true));
            }
        }
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}