@using IdleOptimizer.Models
@using IdleOptimizer.ViewModels
@using IdleOptimizer.Services
@using IdleOptimizer.Components
@using MudBlazor
@inherits FormDialogBase

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Add New Research</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="Form" @bind-IsValid="@Success" @bind-Errors="@Errors">
            <MudTextField ShrinkLabel @bind-Value="@viewModel.Name" Label="Name" Variant="Variant.Outlined" Required="true" />
            
            <MudStack Spacing="2" Class="mt-2">
                @for (int index = 0; index < viewModel.TargetMultipliers.Count; index++)
                {
                    var target = viewModel.TargetMultipliers[index];
                    var isLast = index == viewModel.TargetMultipliers.Count - 1;
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                        <MudSelect ShrinkLabel T="string" @bind-Value="@target.GeneratorName" Label="Generator" FullWidth=true
                                   Variant="Variant.Outlined" Style="flex: 1;" Id="@($"target-generator-{index}")">
                            <MudSelectItem Value="@("None")">None</MudSelectItem>
                            <MudSelectItem Value="@("All")">All</MudSelectItem>
                            @foreach (var generator in CalculationService.Generators)
                            {
                                <MudSelectItem Value="@generator.Name">@generator.Name</MudSelectItem>
                            }
                        </MudSelect>
                        <MudNumericField ShrinkLabel @bind-Value="@target.MultiplierValue" Label="Multiplier" 
                                         Variant="Variant.Outlined" Min="0.01" Style="flex: 1;" Required="true" Id="@($"target-multiplier-{index}")" />
                        
                        <MudButton Size="Size.Small" Variant="Variant.Filled" 
                                   Color="@(isLast ? Color.Primary : Color.Error)"
                                   Style="height: 50px; width: 50px; margin-top: 3px;"
                                   OnClick="@(isLast ? () => AddTargetMultiplier() : () => RemoveTargetMultiplier(target))">
                            @(isLast ? "Add" : "Remove")
                        </MudButton>
                    </MudStack>
                }
            </MudStack>

            <MudStack Spacing="2" Class="mt-2" Row="true">
                <MudSelect ShrinkLabel T="string" SelectedValues="RequiredGeneratorsEnumerable" SelectedValuesChanged="@OnRequiredGeneratorsChanged"
                          Label="Required Generators" Variant="Variant.Outlined" MultiSelection="true" >
                    @foreach (var generator in CalculationService.Generators)
                    {
                        <MudSelectItem Value="@generator.Name">@generator.Name</MudSelectItem>
                    }
                </MudSelect>
                <MudSelect ShrinkLabel T="string" SelectedValues="RequiredResearchEnumerable" SelectedValuesChanged="@OnRequiredResearchChanged"
                          Label="Required Research" Variant="Variant.Outlined" MultiSelection="true" >
                    @foreach (var research in CalculationService.Research)
                    {
                        <MudSelectItem Value="@research.Name">@research.Name</MudSelectItem>
                    }
                </MudSelect>
            </MudStack>

            <ResourceCostEntryEditor Entries="@viewModel.ResourceCosts" 
                                    EntriesChanged="@((List<ResourceCostEntryViewModel> entries) => { viewModel.ResourceCosts = entries; })"
                                    CalculationService="@CalculationService" 
                                    ItemIdPrefix="research-cost"
                                    ShowSelectResourceOption="false" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="SaveAsync" Disabled="!Success">
            Save
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public ICalculationService CalculationService { get; set; } = default!;
    [Inject] private INumberFormattingService NumberFormattingService { get; set; } = default!;

    private ResearchEditViewModel viewModel = new();
    private HashSet<string> requiredGenerators = new();
    private IEnumerable<string> RequiredGeneratorsEnumerable => requiredGenerators;
    private HashSet<string> requiredResearch = new();
    private IEnumerable<string> RequiredResearchEnumerable => requiredResearch;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        var firstResourceName = CalculationService.Resources.FirstOrDefault()?.Name;
        viewModel.ResourceCosts.Add(new ResourceCostEntryViewModel { ResourceName = firstResourceName, Value = 0 });
        
        // Initialize with one target multiplier entry - default to "All" if generators exist
        var defaultGenerator = CalculationService.Generators.Any() ? "All" : null;
        viewModel.TargetMultipliers.Add(new TargetMultiplierViewModel { GeneratorName = defaultGenerator, MultiplierValue = 1.0 });
    }

    private void AddTargetMultiplier()
    {
        // Default to "All" if generators exist, otherwise null
        var defaultGenerator = CalculationService.Generators.Any() ? "All" : null;
        viewModel.TargetMultipliers.Add(new TargetMultiplierViewModel { GeneratorName = defaultGenerator, MultiplierValue = 1.0 });
        StateHasChanged();
    }

    private void RemoveTargetMultiplier(TargetMultiplierViewModel target)
    {
        // Prevent removing the last item to ensure there's always at least one entry
        if (viewModel.TargetMultipliers.Count > 1)
        {
            viewModel.TargetMultipliers.Remove(target);
            StateHasChanged();
        }
    }

    private void OnRequiredGeneratorsChanged(IEnumerable<string> values)
    {
        requiredGenerators = values.ToHashSet();
    }

    private void OnRequiredResearchChanged(IEnumerable<string> values)
    {
        requiredResearch = values.ToHashSet();
    }

    protected override async Task OnSaveAsync()
                    {
        viewModel.RequiredGenerators = requiredGenerators.ToList();
        viewModel.RequiredResearch = requiredResearch.ToList();
        
        var research = viewModel.ToResearch(CalculationService, NumberFormattingService);
        CalculationService.Research.Add(research);
                MudDialog.Close(DialogResult.Ok(true));

                await CalculationService.SaveStateAsync();
    }
}