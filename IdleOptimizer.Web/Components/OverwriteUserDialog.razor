@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">User Already Exists</MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1" Class="mb-3">
            A user with ID "<strong>@UserId</strong>" already exists in the cloud.
        </MudText>
        <MudText Typo="Typo.body2" Class="mb-2">
            Overwriting will replace the existing user's data with your current local data.
        </MudText>
        <MudText Typo="Typo.caption" Color="Color.Warning">
            This action cannot be undone.
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Overwrite">
            Overwrite User
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public string UserId { get; set; } = string.Empty;

    private void Overwrite()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
