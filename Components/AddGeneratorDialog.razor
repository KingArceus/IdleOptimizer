@using IdleOptimizer.Models
@using IdleOptimizer.Services
@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Add New Generator</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
            <MudTextField @bind-Value="@newGenerator.Name" Label="Name" Variant="Variant.Outlined" Required="true" />
            
            <MudStack Row="true" Spacing="2">
                <MudNumericField @bind-Value="@baseProductionValue" Label="Base Production" 
                                Variant="Variant.Outlined" Required="true" Min="0.01" Style="flex: 1;" />
                <MudSelect T="string" @bind-Value="@baseProductionAbbr" Label="Abbr" Variant="Variant.Outlined" 
                          Style="width: 100px;" Dense="true">
                    <MudSelectItem Value="@((string?)null)">None</MudSelectItem>
                    <MudSelectItem Value="@("K")">K</MudSelectItem>
                    <MudSelectItem Value="@("M")">M</MudSelectItem>
                    <MudSelectItem Value="@("B")">B</MudSelectItem>
                    <MudSelectItem Value="@("T")">T</MudSelectItem>
                    <MudSelectItem Value="@("Qa")">Qa</MudSelectItem>
                    <MudSelectItem Value="@("Qi")">Qi</MudSelectItem>
                </MudSelect>
            </MudStack>
            
            <MudNumericField @bind-Value="@newGenerator.Count" Label="Initial Count" 
                            Variant="Variant.Outlined" Required="true" Min="0" />
            
            <MudStack Row="true" Spacing="2">
                <MudNumericField @bind-Value="@costValue" Label="Cost (for 10 units)" 
                                Variant="Variant.Outlined" Required="true" Min="0.01" 
                                HelperText="This is the cost to purchase 10 units" Style="flex: 1;" />
                <MudSelect T="string" @bind-Value="@costAbbr" Label="Abbr" Variant="Variant.Outlined" 
                          Style="width: 100px;" Dense="true">
                    <MudSelectItem Value="@((string?)null)">None</MudSelectItem>
                    <MudSelectItem Value="@("K")">K</MudSelectItem>
                    <MudSelectItem Value="@("M")">M</MudSelectItem>
                    <MudSelectItem Value="@("B")">B</MudSelectItem>
                    <MudSelectItem Value="@("T")">T</MudSelectItem>
                    <MudSelectItem Value="@("Qa")">Qa</MudSelectItem>
                    <MudSelectItem Value="@("Qi")">Qi</MudSelectItem>
                </MudSelect>
            </MudStack>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!success">
            Save
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public ICalculationService CalculationService { get; set; } = default!;

    private Generator newGenerator = new();
    private MudForm? form;
    private bool success;
    private string[] errors = { };
    
    private double baseProductionValue = 0;
    private string? baseProductionAbbr = null;
    private double costValue = 0;
    private string? costAbbr = null;

    private double ApplyAbbreviation(double value, string? abbr)
    {
        return abbr switch
        {
            "K" => value * 1_000,
            "M" => value * 1_000_000,
            "B" => value * 1_000_000_000,
            "T" => value * 1_000_000_000_000,
            "Qa" => value * 1_000_000_000_000_000,
            "Qi" => value * 1_000_000_000_000_000_000,
            _ => value
        };
    }

    private async Task Save()
    {
        if (form != null)
        {
            await form.Validate();
            if (form.IsValid)
            {
                // Apply abbreviations to values
                newGenerator.BaseProduction = ApplyAbbreviation(baseProductionValue, baseProductionAbbr);
                newGenerator.Cost = ApplyAbbreviation(costValue, costAbbr);
                
                CalculationService.Generators.Add(newGenerator);
                await CalculationService.SaveStateAsync();
                MudDialog.Close(DialogResult.Ok(true));
            }
        }
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}

