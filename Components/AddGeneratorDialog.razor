@using IdleOptimizer.Models
@using IdleOptimizer.Services
@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Add New Generator</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
            <MudTextField @bind-Value="@newGenerator.Name" Label="Name" Variant="Variant.Outlined" Required="true" />
            <MudNumericField @bind-Value="@newGenerator.BaseProduction" Label="Base Production" 
                            Variant="Variant.Outlined" Required="true" Min="0.01" />
            <MudNumericField @bind-Value="@newGenerator.Count" Label="Initial Count" 
                            Variant="Variant.Outlined" Required="true" Min="0" />
            <MudNumericField @bind-Value="@newGenerator.Cost" Label="Cost (for 10 units)" 
                            Variant="Variant.Outlined" Required="true" Min="0.01" 
                            HelperText="This is the cost to purchase 10 units" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!success">
            Save
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public ICalculationService CalculationService { get; set; } = default!;

    private Generator newGenerator = new();
    private MudForm? form;
    private bool success;
    private string[] errors = { };

    private async Task Save()
    {
        if (form != null)
        {
            await form.Validate();
            if (form.IsValid)
            {
                CalculationService.Generators.Add(newGenerator);
                await CalculationService.SaveStateAsync();
                MudDialog.Close(DialogResult.Ok(true));
            }
        }
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}

