@using IdleOptimizer.Models
@using IdleOptimizer.Services
@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Add New Research</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
            <MudTextField @bind-Value="@newResearch.Name" Label="Name" Variant="Variant.Outlined" Required="true" />
            
            <MudNumericField @bind-Value="@newResearch.MultiplierValue" Label="Multiplier Value (e.g., 0.25 for +25%)" 
                            Variant="Variant.Outlined" Required="true" Min="0.01" />
            
            <MudStack Row="true" Spacing="2">
                <MudNumericField @bind-Value="@costValue" Label="Cost" 
                                Variant="Variant.Outlined" Required="true" Min="0.01" Style="flex: 1;" />
                <MudSelect T="string" @bind-Value="@costAbbr" Label="Abbr" Variant="Variant.Outlined" 
                          Style="width: 100px;" Dense="true">
                    <MudSelectItem Value="@((string?)null)">None</MudSelectItem>
                    <MudSelectItem Value="@("K")">K</MudSelectItem>
                    <MudSelectItem Value="@("M")">M</MudSelectItem>
                    <MudSelectItem Value="@("B")">B</MudSelectItem>
                    <MudSelectItem Value="@("T")">T</MudSelectItem>
                    <MudSelectItem Value="@("Qa")">Qa</MudSelectItem>
                    <MudSelectItem Value="@("Qi")">Qi</MudSelectItem>
                    <MudSelectItem Value="@("Sx")">Sx</MudSelectItem>
                    <MudSelectItem Value="@("Sp")">Sp</MudSelectItem>
                    <MudSelectItem Value="@("Oc")">Oc</MudSelectItem>
                </MudSelect>
            </MudStack>
            
            <MudTextField @bind-Value="@targetGeneratorsText" Label="Target Generators (comma-separated)" 
                         Variant="Variant.Outlined" HelperText="Enter generator names separated by commas" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Save" Disabled="!success">
            Save
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public ICalculationService CalculationService { get; set; } = default!;

    private Research newResearch = new();
    private string targetGeneratorsText = string.Empty;
    private MudForm? form;
    private bool success;
    private string[] errors = { };
    
    private double costValue = 0;
    private string? costAbbr = null;

    private async Task Save()
    {
        if (form != null)
        {
            await form.Validate();
            if (form.IsValid)
            {
                // Apply abbreviation to cost
                newResearch.Cost = CalculationService.ApplyAbbreviation(costValue, costAbbr);
                
                // Parse target generators
                newResearch.TargetGenerators = targetGeneratorsText
                    .Split(',', StringSplitOptions.RemoveEmptyEntries)
                    .Select(t => t.Trim())
                    .Where(t => !string.IsNullOrWhiteSpace(t))
                    .ToList();

                CalculationService.Research.Add(newResearch);
                await CalculationService.SaveStateAsync();
                MudDialog.Close(DialogResult.Ok(true));
            }
        }
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}

